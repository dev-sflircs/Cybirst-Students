                        <div class="playlist-actions-holder">
                            <div class="left">
                                <div class="autoplay-switch">
                                    <div class="onoffswitch">
                                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" value="on">
                                        <label class="onoffswitch-label" for="myonoffswitch">
                                            <span class="onoffswitch-inner"></span>
                                            <span class="onoffswitch-switch"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="autoplay-label">
                                    <small>autoplay</small>
                                </div>
                            </div>
                        </div>
                        <div class="scrollable-holder" hidden>
                            <div class="pad-bottom-10 playlist-description">
                                <div class="pad-10">
                                    <div class="pad-bottom-10 text-subtle">
                                        <small>this lesson is part of a course</small>
                                    </div>
                                    <div class="pull-right">
                                        <a href="https://egghead.io/courses/build-a-graphql-server"><i class="fa fa-caret-square-o-right"></i></a>
                                    </div>
                                    <h4 class="series-title">@ViewBag.Lesson.Course.Name</h4>
                                </div>
                            </div>
                            <div class="inner">
                                <div class="playlist-lessons-holder">
                                    <ul class="playlist-lessons-list">
                                        @foreach (var lesson in @ViewBag.PreviousLessons)
                                        {
                                            <a href="@Url.Action("Index", "Lesson", new { uid = @lesson.ID })">
                                                <li>
                                                    <div class="up-next-list-item">
                                                        <div class="series-number">@lesson.Order</div>
                                                        <div class="technology-icon-holder">
                                                            <img class="technology-icon hidden-md " src="@lesson.Image">
                                                        </div>
                                                        <div class="lesson-info">
                                                            <div class="list-item-title">@lesson.Name</div>
                                                            <span>
