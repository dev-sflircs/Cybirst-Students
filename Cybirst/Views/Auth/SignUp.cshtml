@model Cybirst.Controllers.SignupModel

@{
    ViewBag.Title = "SignUp";
}

<section class="section">
    <div class="container">
        <div class="title-subtitle-block">
            <h2 class="title">Create your egghead account.</h2>
        </div>
        <div class="narrow-form-holder sign-form-holder">
            <div class="colored-box grey">
                <div>
                    <a class="btn custom-btn custom-btn-secondary custom-btn-grey" href="/users/auth/github">
                        <i class="fa fa-github"></i>
                        Sign up with Github
                    </a>      <br>
                    <br>
                    <em>or</em>
                    <br>
                    <br>
                </div>
               @using (Html.BeginForm("SignUp","Auth")) { 
                <form id="register-form" class="simple_form form-vertical" autocomplete="false" novalidate="novalidate" action="/users" accept-charset="UTF-8" method="post">
                    <div class="form-group string required user_first_name">
                        <label class="string required control-label" for="user_first_name">
                            <abbr title="required">*</abbr> First name
                        </label>
                        <input class="string required form-control" autofocus="autofocus" maxlength="255" size="255" type="text" name="user[first_name]" id="user_first_name">
                    </div>
                    <div class="form-group string required user_first_name">
                        <label class="string required control-label" for="user_first_name">
                            <abbr title="required">*</abbr> Last name
                        </label>
                        <input class="string required form-control" autofocus="autofocus" maxlength="255" size="255" type="text" name="user[first_name]" id="user_first_name">
                    </div>
                    <div class="form-group email required user_email">
                        <label class="email required control-label" for="user_email">
                            <abbr title="required">*</abbr> Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "string email required form-control form-control" , @placeholder = "Email" })
                    </div>
                    <div class="form-group password required user_password">
                    <label class="password required control-label" for="user_password">
                        <abbr title="required">*</abbr> Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "password required form-control",@placeholder = "Password", @type = "password" })
                    </div>
                    <div class="form-group flexbox-between xs-flexbox-column">
                        <input type="submit" name="commit" value="Create Account" class="btn btn custom-btn custom-btn-secondary custom-btn-blue">
                        <br class="visible-xs">

                    </div>
                    <br>
                    <div class="form-group text-center">
                        Have an account? <a class="underlined action" href="/users/sign_in">Sign in</a>
                    </div>
                    <div class="form-group text-center">
                        Forgot your
                        password? <a class="underlined action" href="/users/password/new">Recover it</a>
                    </div>
                </form>
               }
            </div>
        </div>
    </div>
</section>

