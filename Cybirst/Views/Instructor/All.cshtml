
@{
    ViewBag.Title = "Instructors";
    int[] aTest = { 1, 2, 3 };
    int[] bTest = { 1, 2, 3, 4, 5 };
}

<section class="section instructor-list">
    <div class="container">
        <div class="clearfix-row">
            <div class="title-subtitle-block col-sm-8 col-sm-offset-2">
                <h2 class="title">Meet your instructors.</h2>
                <p class="subtitle">
                    <i>
                        Egghead instructors are industry veterans with years of practical, from-the-trenches experience building
                        real software at all scales.
                    </i>
                </p>
            </div><!-- title-subtitle-block -->
        </div>
        <div class="row block-lessons-series">
            @{
                int numberOfCardHolders = ViewBag.Instructors.Length;
            }

            @for (int i = 0; i < numberOfCardHolders; i++)
            {

                <div class="taught-by-leaders__cards-holder">
                    @foreach (var instructor in ViewBag.Instructors[i])
                    {
                        <div class="taught-by-leaders__card">
                            <a href="@Url.Action("Index", "InstructorDetail")">
                                <img class="instructor__photo" src="@instructor.MdAvatar" alt="@( instructor.FirstName + instructor.LastName )">
                            </a>
                            <div class="instructor__info-holder">
                                <div class="instructor__title_box">
                                    <a href="@Url.Action("Index", "InstructorDetail")">
                                        <h4 class="instructor__title">@( instructor.FirstName + instructor.LastName )</h4>
                                    </a>
                                </div>
                                <div class="instructor__about">@instructor.ShortIntro</div>
                            </div>
                            @{
                                string teachings = "";
                                var k = 0;
                                var techs = instructor.Teachings;
                                foreach (var tech in techs)
                                {
                                    teachings += (string)tech;
                                    if (k < techs.Count - 1)
                                    {
                                        teachings += ", ";
                                    }
                                    k++;
                                }
                            }
                            <div class="instructor__teaching-technologies">
                                <span>@("Teaching " + teachings)</span>
                            </div>
                        </div>
                     }
                </div>
                }
        </div>
    </div>
</section>
