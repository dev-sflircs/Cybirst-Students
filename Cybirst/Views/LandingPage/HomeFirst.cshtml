<div class="home__section--accented-bg">
    <div class="home-hero">
        <div class="home-hero__titles-holder">
            <h1 class="home-hero__title">Bite-size video tutorials for badass web developers</h1>
            <h3 class="home-hero__subtitle">Learn the latest frameworks from industry pros</h3>
        </div>
        <div class="home-hero__btn-container">
            <a href="/courses" class="custom-btn custom-btn-red custom-btn-primary">PICK A COURSE TO WATCH</a>
        </div>
        <div class="home-hero__learn-more-container">
            <a href="#we-teach-section" class="home-hero__learn-more-link">
                <span>Learn More</span>
                <i class="fa fa-angle-down icon"></i>
            </a>
        </div>
    </div>
    <div class="home-hero__arrow-down">
        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 300 23.2" style="enable-background:new 0 0 300 23.2;" xml:space="preserve">
        <style type="text/css">
            .st0 {
                fill: #1b1920;
            }
</style>
            <polygon class="st0" points="0,0 300,0 150,23.2 " />
          </svg>
    </div>

    <div class="we-teach" id="we-teach-section">
        <h2 class="we-teach__title">The insider’s guide to cutting-edge front-end tools and frameworks</h2>
        <div class="we-teach__carousel" id="we-teach-carousel">
            <div class="we-teach__carousel-inner">
                <div class="" id="we-teach__carousel-list">
                    @foreach (var tech in ViewBag.Technologies)
                    {
                        <div>
                            <a href="@Url.Action("Index", "TechnologyDetail")" class="we-teach__carousel-item">
                                <img class="we-teach__carousel-item__logo" src="~/Images/icons/react-7b90239e805d8b06ca263be745f8ad5f.svg" alt="React" />
                                <span class="we-teach__carousel-item__title">@tech.Name</span>
                            </a>
                        </div>
                    }
                </div>

                <a href="#" class="slick-control-arrow slick-prev"></a>
                <a href="#" class="slick-control-arrow slick-next"></a>

                <script type="text/javascript" charset="utf-8">
                    $(document).ready(function () {

                        // We Teach carousel init
                        $('#we-teach__carousel-list').slick({
                            dots: false,
                            infinite: true,
                            speed: 300,
                            slidesToShow: 7,
                            slidesToScroll: 1,
                            prevArrow: $('.slick-prev').html('<i class="icon-angle-left"></i>'),
                            nextArrow: $('.slick-next').html('<i class="icon-angle-right"></i>'),
                            responsive: [
                                {
                                    breakpoint: 1199,
                                    settings: {
                                        slidesToShow: 6,
                                        slidesToScroll: 1
                                    }
                                },
                                {
                                    breakpoint: 1024,
                                    settings: {
                                        slidesToShow: 5,
                                        slidesToScroll: 1,
                                        infinite: true,
                                        dots: false
                                    }
                                },
                                {
                                    breakpoint: 767,
                                    settings: {
                                        arrows: false,
                                        slidesToShow: 4,
                                        slidesToScroll: 1
                                    }
                                },
                                {
                                    breakpoint: 544,
                                    settings: {
                                        arrows: false,
                                        slidesToShow: 3,
                                        slidesToScroll: 1
                                    }
                                }
                            ]
                        });

                        // Scroll to the target
                        $('.home-hero__learn-more-link').click(function (e) {
                            e.preventDefault();
                            var target = $(this.hash);
                            target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                            if (target.length) {
                                $('html,body').animate({
                                    scrollTop: target.offset().top
                                }, 200);
                                return false;
                            }
                        });

                    });
                </script>

            </div>
        </div>
        <a href="@Url.Action("Courses", "Home")" class="we-teach__browse-full-library">Explore the Library of Courses</a>
    </div>
</div>

