@model Cybirst.Areas.Experts.Controllers.LessonModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Experts/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index", "Lesson", new { id = ViewBag.lessonDetail.ID })"><i class="fa fa-arrow-left"></i> Edit</a>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Edit", "Lesson", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Name</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @autofocus = "autofocus", @Value = ViewBag.lessonDetail.Name })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Course</label>
                        <div class="col-md-10">
                            <p>@ViewBag.lessonDetail.Course.Name</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="Name">Intro</label>
                        <div class="col-md-10">
                            @Html.TextArea("Intro", (string)ViewBag.lessonDetail.Intro, new { rows = 10, @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            For PRO accounts
                        </label>
                        <div class="col-md-10">
                            <label class="control-label">
                                @Html.CheckBox("IsPro", (bool)ViewBag.lessonDetail.IsPro)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            Small image
                        </label>
                        <div class="col-md-10">
                            <div class="col-md-12" style="text-align: center; background: #f9f9f9; border: dashed 3px #bdbdbd;">
                                <video height="300">
                                    <source id="containerVideo" src="@Url.Content(ViewBag.lessonDetail.Video)" type="video/mp4"/>
                                </video>
                                <input type="file" id="btnVideo" name="Video" accept="video/mp4"/>
                                <script>
                                    $("#btnVideo").change(function () {
                                        var reader = new FileReader();

                                        reader.onload = function (e) {
                                            // get loaded data and render thumbnail.
                                            $("#containerVideo").attr('src', e.target.result);
                                        };

                                        // read the image file as a data URL.
                                        reader.readAsDataURL(this.files[0]);
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
