@{
    ViewBag.Title = "Home Page";
    Layout = "~/Areas/Experts/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        My courses
        <a class="btn btn-sm btn-success btn-flat pull-right" href="@Url.Action("Create", "Course")">Create a new course</a>
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        @foreach(var course in ViewBag.Courses)
        {
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@( course.Enrollments.Count )<small> enrollments</small></h3>
                        <p>@course.Name</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="@Url.Action("Index", "Course", new  { id= course.ID })" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        }
    </div>
</section>
<!-- /.content -->